<% if turbo_frame_modal? %>
  <%= turbo_frame_tag "modal" do %>
    <%= render layout: "shared/modal_form", locals: { title: "Edit Savings Goal" } do %>
      <%= render "form", savings_goal: @savings_goal %>
    <% end %>
  <% end %>
<% else %>
  <%= render layout: "shared/form_page", locals: { title: "Edit Savings Goal", back_text: "Back to goals", back_path: savings_goals_path } do %>
    <%= render "form", savings_goal: @savings_goal %>
  <% end %>
<% end %>
