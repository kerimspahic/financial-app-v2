<%= form_with(model: budget, class: "space-y-6") do |form| %>
  <% if budget.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-md">
      <h3 class="font-semibold"><%= pluralize(budget.errors.count, "error") %> prevented this budget from being saved:</h3>
      <ul class="mt-2 list-disc list-inside">
        <% budget.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :category_id, current_user.categories.expense, :id, :name, { prompt: "Select expense category" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :amount, "Budget Amount", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :amount, step: 0.01, min: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :month, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :month, (1..12).map { |m| [Date::MONTHNAMES[m], m] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :year, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :year, (Date.current.year - 1..Date.current.year + 1).to_a, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div>
    <%= form.submit class: "bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
