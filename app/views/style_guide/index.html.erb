  <%# 19. TOAST NOTIFICATIONS %>
  <%# ════════════════════════════════════════════════════════════════════ %>
  <section id="toasts" class="space-y-6">
    <h2 class="text-2xl font-bold text-text-primary">Toast Notifications</h2>
    <p class="text-sm text-text-secondary">Click the buttons to trigger toast popups in the top-right corner.</p>
    <div class="flex flex-wrap gap-3">
      <% { "Success Toast" => "success", "Error Toast" => "error", "Warning Toast" => "warning", "Info Toast" => "info" }.each do |label, variant| %>
        <button data-action="click->toast#trigger"
                data-toast-message="<%= label %> — This is a sample notification."
                data-toast-variant="<%= variant %>"
                class="px-4 py-2 text-sm font-medium rounded-xl glass hover:glass-strong text-text-primary transition-all cursor-pointer">
          <%= label %>
        </button>
      <% end %>
    </div>
  </section>
</div>
