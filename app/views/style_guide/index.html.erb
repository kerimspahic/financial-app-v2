  <%# 18. ANIMATIONS %>
  <%# ════════════════════════════════════════════════════════════════════ %>
  <section id="animations" class="space-y-6">
    <h2 class="text-2xl font-bold text-text-primary">Animations</h2>

    <h3 class="text-lg font-semibold text-text-primary">Card Entrance with Stagger</h3>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
      <% 4.times do |i| %>
        <div class="glass rounded-xl p-6 text-center animate-card-entrance stagger-<%= i + 1 %>">
          <p class="text-sm font-medium text-text-primary">Card <%= i + 1 %></p>
          <p class="text-xs text-text-muted">.stagger-<%= i + 1 %></p>
        </div>
      <% end %>
    </div>

    <h3 class="text-lg font-semibold text-text-primary">Hover Lift</h3>
    <div class="grid grid-cols-3 gap-4">
      <% 3.times do |i| %>
        <div class="glass rounded-xl p-6 text-center hover-lift cursor-pointer">
          <p class="text-sm font-medium text-text-primary">Hover me</p>
          <p class="text-xs text-text-muted">.hover-lift</p>
        </div>
      <% end %>
    </div>

    <h3 class="text-lg font-semibold text-text-primary">Other Animations</h3>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="glass rounded-xl p-6 text-center animate-fade-up">
        <p class="text-sm font-medium text-text-primary">.animate-fade-up</p>
      </div>
      <div class="glass rounded-xl p-6 text-center animate-slide-in-right">
        <p class="text-sm font-medium text-text-primary">.animate-slide-in-right</p>
      </div>
      <div class="glass rounded-xl p-6 text-center animate-fade-in">
        <p class="text-sm font-medium text-text-primary">.animate-fade-in</p>
      </div>
    </div>
  </section>

