<%= form_with(model: category, class: "space-y-6") do |form| %>
  <% if category.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-md">
      <h3 class="font-semibold"><%= pluralize(category.errors.count, "error") %> prevented this category from being saved:</h3>
      <ul class="mt-2 list-disc list-inside">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "e.g., Groceries" %>
  </div>

  <div>
    <%= form.label :category_type, "Type", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :category_type, Category.category_types.keys.map { |t| [t.humanize, t] }, { prompt: "Select type" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :color, class: "block text-sm font-medium text-gray-700" %>
    <%= form.color_field :color, class: "mt-1 block h-10 rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= form.submit class: "bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
