<%= form_with(model: category, class: "space-y-6") do |form| %>
  <% if category.errors.any? %>
    <%= render AlertComponent.new(variant: :danger, dismissable: false, timeout: 0) do %>
      <strong><%= pluralize(category.errors.count, "error") %> prevented this category from being saved:</strong>
      <ul class="mt-2 list-disc list-inside">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>

  <%= render InputComponent.new(form: form, field: :name, label: "Name", placeholder: "e.g., Groceries") %>

  <%= render InputComponent.new(
    form: form,
    field: :category_type,
    label: "Type",
    type: :select,
    collection: Category.category_types.keys.map { |t| [t.humanize, t] },
    include_blank: "Select type"
  ) %>

  <%= render InputComponent.new(form: form, field: :color, label: "Color", type: :color) %>

  <%= render ButtonComponent.new(variant: :primary, type: "submit", submit: true) do %>
    <%= category.persisted? ? "Update Category" : "Create Category" %>
  <% end %>
<% end %>
