<%= form_with(model: account, class: "space-y-6") do |form| %>
  <% if account.errors.any? %>
    <%= render AlertComponent.new(variant: :danger, dismissable: false, timeout: 0) do %>
      <strong><%= pluralize(account.errors.count, "error") %> prevented this account from being saved:</strong>
      <ul class="mt-2 list-disc list-inside">
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>

  <%= render InputComponent.new(form: form, field: :name, label: "Name", placeholder: "e.g., Main Checking") %>

  <%= render InputComponent.new(
    form: form,
    field: :account_type,
    label: "Account Type",
    type: :select,
    collection: Account.account_types.keys.map { |t| [t.humanize, t] },
    include_blank: "Select type"
  ) %>

  <%= render InputComponent.new(form: form, field: :balance, label: "Balance", type: :number, step: "0.01") %>

  <%= render InputComponent.new(form: form, field: :currency, label: "Currency") %>

  <%= render ButtonComponent.new(variant: :primary, type: "submit", submit: true) do %>
    <%= account.persisted? ? "Update Account" : "Create Account" %>
  <% end %>
<% end %>
