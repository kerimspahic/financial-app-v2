<%= form_with(model: account, class: "space-y-6") do |form| %>
  <% if account.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-md">
      <h3 class="font-semibold"><%= pluralize(account.errors.count, "error") %> prevented this account from being saved:</h3>
      <ul class="mt-2 list-disc list-inside">
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "e.g., Main Checking" %>
  </div>

  <div>
    <%= form.label :account_type, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :account_type, Account.account_types.keys.map { |t| [t.humanize, t] }, { prompt: "Select type" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :balance, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :balance, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :currency, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :currency, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.submit class: "bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
