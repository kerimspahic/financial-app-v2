<% if turbo_frame_modal? %>
  <%= turbo_frame_tag "modal" do %>
    <%= render layout: "shared/modal_form", locals: { title: "Edit Account" } do %>
      <%= render "form", account: @account %>
    <% end %>
  <% end %>
<% else %>
  <%= render layout: "shared/form_page", locals: { title: "Edit Account", back_text: "Back to account", back_path: account_path(@account) } do %>
    <%= render "form", account: @account %>
  <% end %>
<% end %>
