<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Accounts</h1>
    <%= link_to "New Account", new_account_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
  </div>

  <% if @accounts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @accounts.each do |account| %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= account.name %></h3>
              <span class="inline-block mt-1 px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-600">
                <%= account.account_type.humanize %>
              </span>
            </div>
            <div class="flex space-x-2">
              <%= link_to "Edit", edit_account_path(account), class: "text-sm text-gray-500 hover:text-gray-700" %>
            </div>
          </div>
          <p class="mt-4 text-2xl font-bold <%= account.balance >= 0 ? 'text-gray-900' : 'text-red-600' %>">
            <%= number_to_currency(account.balance) %>
          </p>
          <p class="text-sm text-gray-500"><%= account.currency %></p>
          <%= link_to "View transactions", account_path(account), class: "mt-3 inline-block text-sm text-indigo-600 hover:text-indigo-800" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <p class="text-gray-500 mb-4">You don't have any accounts yet.</p>
      <%= link_to "Create your first account", new_account_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
