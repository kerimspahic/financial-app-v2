<% if turbo_frame_modal? %>
  <%= turbo_frame_tag "modal" do %>
    <%= render layout: "shared/modal_form", locals: { title: "New Account" } do %>
      <%= render "form", account: @account %>
    <% end %>
  <% end %>
<% else %>
  <%= render layout: "shared/form_page", locals: { title: "New Account", back_text: "Back to accounts", back_path: accounts_path } do %>
    <%= render "form", account: @account %>
  <% end %>
<% end %>
