<div class="space-y-8">
  <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Total Balance</p>
      <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_balance) %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Monthly Income</p>
      <p class="text-2xl font-bold text-green-600"><%= number_to_currency(@monthly_income) %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Monthly Expenses</p>
      <p class="text-2xl font-bold text-red-600"><%= number_to_currency(@monthly_expenses) %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Net This Month</p>
      <% net = @monthly_income - @monthly_expenses %>
      <p class="text-2xl font-bold <%= net >= 0 ? 'text-green-600' : 'text-red-600' %>">
        <%= number_to_currency(net) %>
      </p>
    </div>
  </div>

  <!-- Budget Progress -->
  <% if @budgets.any? %>
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Budget Progress</h2>
      <div class="space-y-4">
        <% @budgets.each do |budget| %>
          <div>
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium text-gray-700"><%= budget.category.name %></span>
              <span class="text-sm text-gray-500">
                <%= number_to_currency(budget.spent) %> / <%= number_to_currency(budget.amount) %>
              </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2.5">
              <% pct = [budget.percent_used, 100].min %>
              <div class="h-2.5 rounded-full <%= pct > 90 ? 'bg-red-500' : pct > 70 ? 'bg-yellow-500' : 'bg-green-500' %>"
                   style="width: <%= pct %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Accounts Overview -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Accounts</h2>
      <%= link_to "View all", accounts_path, class: "text-sm text-indigo-600 hover:text-indigo-800" %>
    </div>
    <% if @accounts.any? %>
      <div class="divide-y divide-gray-200">
        <% @accounts.each do |account| %>
          <div class="py-3 flex justify-between items-center">
            <div>
              <p class="font-medium text-gray-900"><%= account.name %></p>
              <p class="text-sm text-gray-500"><%= account.account_type.humanize %></p>
            </div>
            <p class="font-semibold <%= account.balance >= 0 ? 'text-gray-900' : 'text-red-600' %>">
              <%= number_to_currency(account.balance) %>
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No accounts yet. <%= link_to "Create one", new_account_path, class: "text-indigo-600 hover:text-indigo-800" %>.</p>
    <% end %>
  </div>

  <!-- Recent Transactions -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Recent Transactions</h2>
      <%= link_to "View all", transactions_path, class: "text-sm text-indigo-600 hover:text-indigo-800" %>
    </div>
    <% if @recent_transactions.any? %>
      <div class="divide-y divide-gray-200">
        <% @recent_transactions.each do |t| %>
          <div class="py-3 flex justify-between items-center">
            <div>
              <p class="font-medium text-gray-900"><%= t.description %></p>
              <p class="text-sm text-gray-500"><%= t.date.strftime("%b %d, %Y") %> &middot; <%= t.account.name %> &middot; <%= t.category.name %></p>
            </div>
            <p class="font-semibold <%= t.income? ? 'text-green-600' : 'text-red-600' %>">
              <%= t.income? ? '+' : '-' %><%= number_to_currency(t.amount) %>
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No transactions yet. <%= link_to "Add one", new_transaction_path, class: "text-indigo-600 hover:text-indigo-800" %>.</p>
    <% end %>
  </div>
</div>
