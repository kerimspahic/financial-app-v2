<%= form_with(model: [ account, valuation ], class: "space-y-6") do |form| %>
  <div class="grid grid-cols-2 gap-4">
    <%= render InputComponent.new(form: form, field: :value, label: "Value", type: :number, step: "0.01", placeholder: "e.g., 450000") %>
    <%= render InputComponent.new(form: form, field: :date, label: "Date", type: :date) %>
  </div>

  <%= render InputComponent.new(
    form: form,
    field: :source,
    label: "Source",
    type: :select,
    collection: [ [ "Manual Estimate", "manual" ], [ "Appraisal", "appraisal" ], [ "Zillow", "zillow" ], [ "KBB", "kbb" ], [ "Other", "other" ] ],
    include_blank: "Select source"
  ) %>

  <%= render InputComponent.new(form: form, field: :notes, label: "Notes", type: :textarea, placeholder: "Optional notes...", rows: 2) %>

  <%= render ButtonComponent.new(variant: :primary, type: "submit", submit: true) do %>
    Record Valuation
  <% end %>
<% end %>
