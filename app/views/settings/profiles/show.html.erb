<%= render "settings/shared/settings_layout" do %>
  <div class="space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-text-primary">Profile</h2>
      <p class="text-sm text-text-secondary mt-1">Manage your personal information</p>
    </div>

    <%= form_with(model: @user, url: settings_profile_path, method: :patch, class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <%= render AlertComponent.new(variant: :danger, dismissable: false) do %>
          <div>
            <p class="font-medium"><%= pluralize(@user.errors.count, "error") %> prevented saving:</p>
            <ul class="mt-1 list-disc list-inside text-sm">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>

      <div class="animate-card-entrance stagger-1">
        <%= render CardComponent.new do |card| %>
          <% card.with_header do %>
            <h3 class="text-lg font-semibold text-text-primary">Personal Information</h3>
          <% end %>
          <div class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <%= render InputComponent.new(form: form, field: :first_name, label: "First name", autocomplete: "given-name") %>
              <%= render InputComponent.new(form: form, field: :last_name, label: "Last name", autocomplete: "family-name") %>
            </div>
            <%= render InputComponent.new(form: form, field: :email, type: :email, label: "Email address", autocomplete: "email") %>
          </div>
        <% end %>
      </div>

      <div class="animate-card-entrance stagger-2">
        <%= render CardComponent.new do |card| %>
          <% card.with_header do %>
            <h3 class="text-lg font-semibold text-text-primary">Confirm Changes</h3>
          <% end %>
          <p class="text-sm text-text-secondary mb-4">Enter your current password to save email changes</p>
          <%= render InputComponent.new(
            form: form, field: :current_password, type: :password, label: "Current password",
            autocomplete: "current-password",
            hint: "Required only when changing your email address."
          ) %>
        <% end %>
      </div>

      <div class="flex justify-end">
        <%= render ButtonComponent.new(variant: :primary, submit: true) do %>
          Save Profile
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
