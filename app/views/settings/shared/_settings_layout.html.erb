<div class="max-w-5xl mx-auto">
  <%= render PageHeaderComponent.new(title: "Settings", subtitle: "Manage your account and preferences") %>

  <div class="grid grid-cols-1 lg:grid-cols-[15rem_1fr] gap-8 mt-6">
    <%# Settings sidebar navigation %>
    <nav class="space-y-6">
      <% SettingsNavHelper::SETTINGS_NAV_GROUPS.each do |group_key, group_label| %>
        <div>
          <h3 class="px-3 mb-1.5 text-xs font-semibold uppercase tracking-wider text-text-muted"><%= group_label %></h3>
          <div class="space-y-0.5">
            <% SettingsNavHelper::SETTINGS_NAV_ITEMS.select { |i| i[:group] == group_key }.each do |item| %>
              <%= settings_nav_link(item) %>
            <% end %>
          </div>
        </div>
      <% end %>
    </nav>

    <%# Settings content area %>
    <div class="min-w-0">
      <%= yield %>
    </div>
  </div>
</div>
