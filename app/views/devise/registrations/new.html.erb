<%= render layout: "devise/shared/auth_layout", locals: { title: "Create an account", subtitle: "Start managing your finances today" } do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-4">
      <%= render InputComponent.new(form: f, field: :email, type: :email, label: "Email address", required: true, autofocus: true, autocomplete: "email") %>
      <%= render InputComponent.new(
        form: f, field: :password, type: :password, label: "Password", required: true,
        autocomplete: "new-password",
        hint: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil
      ) %>
      <%= render InputComponent.new(form: f, field: :password_confirmation, type: :password, label: "Confirm password", required: true, autocomplete: "new-password") %>

      <%= render ButtonComponent.new(variant: :primary, submit: true, class: "w-full justify-center") do %>
        Sign up
      <% end %>
    </div>
  <% end %>
<% end %>
