<%= render layout: "devise/shared/auth_layout", locals: { title: "Welcome back", subtitle: "Sign in to your account" } do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-4">
      <%= render InputComponent.new(form: f, field: :email, type: :email, label: "Email address", autofocus: true, autocomplete: "email") %>
      <%= render InputComponent.new(form: f, field: :password, type: :password, label: "Password", autocomplete: "current-password") %>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <label class="flex items-center gap-2 text-sm text-text-secondary cursor-pointer">
            <%= f.check_box :remember_me, class: "rounded border-input-border text-primary-600 focus:ring-primary-500" %>
            Remember me
          </label>
          <% if devise_mapping.recoverable? %>
            <%= link_to "Forgot password?", new_password_path(resource_name),
                class: "text-sm text-primary-600 hover:text-primary-700 font-medium" %>
          <% end %>
        </div>
      <% end %>

      <%= render ButtonComponent.new(variant: :primary, submit: true, class: "w-full justify-center") do %>
        Log in
      <% end %>
    </div>
  <% end %>
<% end %>
