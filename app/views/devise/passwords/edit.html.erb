<%= render layout: "devise/shared/auth_layout", locals: { title: "Change your password", subtitle: "Enter your new password below" } do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="space-y-4">
      <%= render InputComponent.new(
        form: f, field: :password, type: :password, label: "New password", required: true,
        autofocus: true, autocomplete: "new-password",
        hint: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil
      ) %>
      <%= render InputComponent.new(form: f, field: :password_confirmation, type: :password, label: "Confirm new password", required: true, autocomplete: "new-password") %>

      <%= render ButtonComponent.new(variant: :primary, submit: true, class: "w-full justify-center") do %>
        Change my password
      <% end %>
    </div>
  <% end %>
<% end %>
