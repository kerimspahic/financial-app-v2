<% if turbo_frame_modal? %>
  <%= turbo_frame_tag "modal" do %>
    <%= render layout: "shared/modal_form", locals: { title: "New Webhook" } do %>
      <%= render "form", webhook: @webhook %>
    <% end %>
  <% end %>
<% else %>
  <%= render layout: "shared/form_page", locals: { title: "New Webhook", back_text: "Back to webhooks", back_path: webhooks_path } do %>
    <%= render "form", webhook: @webhook %>
  <% end %>
<% end %>
