<% if turbo_frame_modal? %>
  <%= turbo_frame_tag "modal" do %>
    <%= render layout: "shared/modal_form", locals: { title: "Edit Recurring Transaction" } do %>
      <%= render "form", recurring_transaction: @recurring_transaction %>
    <% end %>
  <% end %>
<% else %>
  <%= render layout: "shared/form_page", locals: { title: "Edit Recurring Transaction", back_text: "Back to recurring", back_path: recurring_transactions_path } do %>
    <%= render "form", recurring_transaction: @recurring_transaction %>
  <% end %>
<% end %>
