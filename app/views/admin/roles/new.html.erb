<%= render "admin/shared/admin_layout" do %>
  <div class="space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-text-primary">New Role</h2>
      <p class="text-sm text-text-secondary mt-1">Create a new role with permissions</p>
    </div>

    <%= render CardComponent.new do |card| %>
      <% card.with_header do %>
        <h3 class="text-lg font-semibold text-text-primary">Role Details</h3>
      <% end %>
      <%= render "form", role: @role, permissions: @permissions %>
    <% end %>
  </div>
<% end %>
