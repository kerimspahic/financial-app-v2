<div class="max-w-6xl mx-auto">
  <%= render PageHeaderComponent.new(title: "Admin Panel", subtitle: "System administration and management") %>

  <div class="grid grid-cols-1 lg:grid-cols-[15rem_1fr] gap-8 mt-6">
    <%# Admin sidebar navigation %>
    <nav class="space-y-6">
      <% AdminNavHelper::ADMIN_NAV_GROUPS.each do |group_key, group_label| %>
        <div>
          <h3 class="px-3 mb-1.5 text-xs font-semibold uppercase tracking-wider text-text-muted"><%= group_label %></h3>
          <div class="space-y-0.5">
            <% AdminNavHelper::ADMIN_NAV_ITEMS.select { |i| i[:group] == group_key }.each do |item| %>
              <%= admin_nav_link(item) %>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Back to app link %>
      <div class="pt-4 border-t border-glass-border">
        <%= link_to root_path, class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium text-text-muted hover:text-text-primary hover:glass transition-all duration-200" do %>
          <%= heroicon "arrow-left", variant: :outline, options: { class: "w-5 h-5 shrink-0" } %>
          <span>Back to App</span>
        <% end %>
      </div>
    </nav>

    <%# Admin content area %>
    <div class="min-w-0">
      <%= yield %>
    </div>
  </div>
</div>
