<%= render "admin/shared/admin_layout" do %>
  <div class="space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-text-primary">Audit Log</h2>
      <p class="text-sm text-text-secondary mt-1">Track all system activity and changes</p>
    </div>

    <div class="animate-card-entrance stagger-1">
      <%= render CardComponent.new do |card| %>
        <% card.with_header do %>
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-text-primary">Activity History</h3>
            <%= render BadgeComponent.new(variant: :info) do %>Coming Soon<% end %>
          </div>
        <% end %>
        <div class="text-center py-8">
          <%= heroicon "clipboard-document-list", variant: :outline, options: { class: "w-12 h-12 mx-auto text-text-muted mb-4" } %>
          <p class="text-sm text-text-secondary max-w-md mx-auto">
            A comprehensive, searchable log of all actions taken in the system. Filter by user, action type, date range, and more.
          </p>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <% [
        [ "user-circle", "User Actions", "Login/logout, profile changes, account modifications", "text-blue-500", "bg-blue-500/10" ],
        [ "pencil-square", "Data Changes", "Transaction edits, account updates, category modifications", "text-purple-500", "bg-purple-500/10" ],
        [ "shield-exclamation", "Security Events", "Failed login attempts, permission changes, role assignments", "text-amber-500", "bg-amber-500/10" ]
      ].each_with_index do |(icon, title, desc, color, bg), i| %>
        <div class="animate-card-entrance stagger-<%= i + 2 %>">
          <%= render CardComponent.new do %>
            <div class="flex items-start gap-3">
              <div class="p-2 rounded-lg <%= bg %> shrink-0">
                <%= heroicon icon, variant: :outline, options: { class: "w-5 h-5 #{color}" } %>
              </div>
              <div>
                <p class="text-sm font-medium text-text-primary"><%= title %></p>
                <p class="text-xs text-text-muted mt-1"><%= desc %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
