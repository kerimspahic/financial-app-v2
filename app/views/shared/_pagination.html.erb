<% if pagy.pages > 1 %>
  <nav class="flex items-center justify-between pt-4" aria-label="Pagination">
    <p class="text-sm text-text-secondary">
      Showing <span class="font-medium text-text-primary"><%= pagy.from %></span> to
      <span class="font-medium text-text-primary"><%= pagy.to %></span> of
      <span class="font-medium text-text-primary"><%= pagy.count %></span> results
    </p>
    <div class="flex items-center gap-1">
      <% if pagy.previous %>
        <%= link_to pagy.page_url(:previous), class: "px-3 py-1.5 text-sm rounded-lg glass text-text-secondary hover:text-text-primary transition-colors" do %>
          &laquo; Prev
        <% end %>
      <% end %>

      <% pagy.series.each do |item| %>
        <% if item.is_a?(Integer) %>
          <%= link_to item, pagy.page_url(item), class: "px-3 py-1.5 text-sm rounded-lg glass text-text-secondary hover:text-text-primary transition-colors" %>
        <% elsif item.is_a?(String) %>
          <span class="px-3 py-1.5 text-sm rounded-lg gradient-primary text-white font-medium"><%= item %></span>
        <% elsif item == :gap %>
          <span class="px-2 py-1.5 text-sm text-text-muted">&hellip;</span>
        <% end %>
      <% end %>

      <% if pagy.next %>
        <%= link_to pagy.page_url(:next), class: "px-3 py-1.5 text-sm rounded-lg glass text-text-secondary hover:text-text-primary transition-colors" do %>
          Next &raquo;
        <% end %>
      <% end %>
    </div>
  </nav>
<% end %>
