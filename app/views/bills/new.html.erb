<% if turbo_frame_modal? %>
  <%= turbo_frame_tag "modal" do %>
    <%= render layout: "shared/modal_form", locals: { title: "New Bill" } do %>
      <%= render "form", bill: @bill %>
    <% end %>
  <% end %>
<% else %>
  <%= render layout: "shared/form_page", locals: { title: "New Bill", back_text: "Back to bills", back_path: bills_path } do %>
    <%= render "form", bill: @bill %>
  <% end %>
<% end %>
